<UserControl x:Class="PointOfSale.CustomizeCowpokeChili"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock>Cheese</TextBlock>
            <TextBlock>Sour Cream</TextBlock>
            <TextBlock>Green Onions</TextBlock>
            <TextBlock>Tortilla Strips</TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <CheckBox IsChecked="{Binding Path=Cheese}"  />
            <CheckBox IsChecked="{Binding Path=SourCream}"  />
            <CheckBox IsChecked="{Binding Path=GreenOnions}"  />
            <CheckBox IsChecked="{Binding Path=TortillaStrips}"  />
        </StackPanel>
    </Grid>
</UserControl>
